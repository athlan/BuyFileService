<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <embeddable name="LandingPayment\Domain\OrderData">
        <field name="email" column="email" type="string" />
        <field name="invoice" column="invoice_requested" type="boolean" />
        <embedded name="invoiceData" class="LandingPayment\Domain\OrderInvoiceData" use-column-prefix="true" column-prefix="invoice_" />
    </embeddable>
</doctrine-mapping>
